{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "module": "ES2022",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "declaration": true,
    "alwaysStrict": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/**/*"
  ]
}
